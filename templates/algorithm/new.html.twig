{% extends 'base.html.twig' %}
{% block stylesheets %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.css">
{% endblock %}
{% block javascripts %}
<script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
<script src="{{ asset("js/tagEditor.js") }}"></script>
{% endblock %}

{% block body %}
    {{ form_start(form) }}
    {{ form_row(form.name) }}
    {{ form_row(form.creator) }}
    {{ form_row(form.year) }}
    <h3>Tags</h3>
    <ul class="tags" data-prototype="{{ form_widget(form.tags.vars.prototype)|e('html_attr') }}"></ul>
    <button type="button" class="btn btn-primary add_item_link" data-collection-holder-class="tags">Add a tag</button>

    {{ form_row(form.keyLength) }}
    {{ form_row(form.digestSize) }}
    {{ form_row(form.description, {'id' : 'descriptionEditor'}) }}
    {{ form_row(form.submit) }}
    {{ form_end(form, {'render_rest': false}) }}
    <script>
        var simplemde = new SimpleMDE({
            element: document.getElementById("descriptionEditor"),
            forceSync: true
        });
    </script>
{% endblock %}

{% block title %}

{% endblock %}